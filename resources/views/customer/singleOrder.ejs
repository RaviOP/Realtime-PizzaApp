<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track Delivery Status</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-sm"><%= order._id %> </h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>

            <ul>
                <li class="status_line text-xl pb-16" data-status="order_placed"><Span>Order Placed</Span></li>
                <li class="status_line text-xl pb-16" data-status="confirmed"><Span>Order Confirmation</Span></li>
                <li class="status_line text-xl pb-16" data-status="prepared"><Span>Order Preparation</Span></li>
                <li class="status_line text-xl pb-16" data-status="delivered"><Span>Order Out For Delivery</Span></li>
                <li class="status_line text-xl" data-status="completed"><Span>Order Completed</Span></li>
            </ul>
        </div>
    </div>
</section>